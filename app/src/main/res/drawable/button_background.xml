<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado cuando el botón es presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary" /> <!-- Primary de fondo al presionar -->
            <corners android:radius="16dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>

    <!-- Estado normal del botón -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Fondo blanco normal -->
            <stroke
                android:width="2dp"
                android:color="@color/primary" /> <!-- Borde naranja -->
            <corners android:radius="16dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>


</selector>