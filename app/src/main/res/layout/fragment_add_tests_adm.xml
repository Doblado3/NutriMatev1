<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".administrador.AddTestsFragmentAdm">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/nombreNewTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editlogintext_background"
                android:hint="Nombre del Test"
                android:padding="16dp"
                android:textColorHint="@color/grey"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/descripcionNewTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editlogintext_background"
                android:hint="Descripción"
                android:padding="16dp"
                android:textColorHint="@color/grey"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/preguntasNewTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editlogintext_background"
                android:hint="Preguntas (separadas por comas)"
                android:padding="16dp"
                android:textColorHint="@color/grey"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/opcionesNewTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editlogintext_background"
                android:hint="Opciones (separadas por comas)"
                android:padding="16dp"
                android:textColorHint="@color/grey"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/valoresNewTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editlogintext_background"
                android:hint="Valores (separados por comas)"
                android:padding="16dp"
                android:textColorHint="@color/grey"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/explicacionNewTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editlogintext_background"
                android:hint="Explicación"
                android:padding="16dp"
                android:textColorHint="@color/grey"
                android:textStyle="italic" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonAddNewTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="80dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/primary_background"
                android:padding="16dp"
                android:text="Añadir Test"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
