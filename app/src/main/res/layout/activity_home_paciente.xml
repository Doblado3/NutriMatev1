<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".paciente.HomePacienteActivity">


  <!-- CuadrÃ­cula con botones -->


  <GridLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:columnCount="2"
      android:padding="8dp"
      android:rowCount="3"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:id="@+id/LLTests"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/button_background"
        android:padding="8dp">

        <ImageView
            android:id="@+id/HPimgTests"
            android:layout_width="115dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_test"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/HPtxtTests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/tests"
            android:textColor="@color/black"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/button_background"
        android:padding="8dp">

        <ImageView
            android:id="@+id/HPimgInfo"
            android:layout_width="115dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_info"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/HPtxtInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/info"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLHistorial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/button_background"
        android:padding="8dp">

      <ImageView
          android:id="@+id/HPimgHistorial"
          android:layout_width="115dp"
          android:layout_height="80dp"
          android:layout_gravity="center"
          android:src="@drawable/ic_historial"
          app:tint="@color/black" />

        <TextView
            android:id="@+id/HPtxtHistorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/historial"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LLDiviertete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/button_background"
        android:padding="8dp">

        <ImageView
            android:id="@+id/HPimgCitas"
            android:layout_width="115dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_diviertete"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/HPtxtCitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/diviertete"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </LinearLayout>



  </GridLayout>

