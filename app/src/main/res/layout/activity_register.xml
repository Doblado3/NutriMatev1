<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/ReditTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/editlogintext_background"
                android:hint="@string/textoNombre"
                android:padding="8dp"
                android:textColorHint="@color/grey"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/ReditTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/editlogintext_background"
                android:hint="Correo Electrónico"
                android:padding="8dp"
                android:textColorHint="@color/grey"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/ReditTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/editlogintext_background"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColorHint="@color/grey"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/ReditTextApellidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/editlogintext_background"
                android:hint="@string/textoApellidos"
                android:padding="8dp"
                android:textColorHint="@color/grey"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/ReditTextDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/editlogintext_background"
                android:hint="@string/textoFechaNacMed"
                android:inputType="date"
                android:padding="8dp"
                android:textColorHint="@color/grey"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/ReditTextPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/editlogintext_background"
                android:hint="@string/textoNumeroMovil"
                android:inputType="phone"
                android:padding="8dp"
                android:textColorHint="@color/grey"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textRegisterSex"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="266dp"
                android:background="@drawable/editlogintext_background"
                android:padding="16dp"
                android:text="Sexo:"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/RradioGroupSexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="50dp">

                <RadioButton
                    android:id="@+id/RradioMasculino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editlogintext_background"
                    android:padding="8dp"
                    android:text="Masculino" />

                <RadioButton
                    android:id="@+id/RradioFemenino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/editlogintext_background"
                    android:padding="8dp"
                    android:text="Femenino" />

                <RadioButton
                    android:id="@+id/RradioN_C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/editlogintext_background"
                    android:padding="8dp"
                    android:text="N/C" />

            </RadioGroup>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRegister"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="80dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/primary_background"
                android:padding="16dp"
                android:text="Registrarse"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>