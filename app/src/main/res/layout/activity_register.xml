<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/ReditTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:padding="16dp"/>

        <EditText
            android:id="@+id/ReditTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ContraseÃ±a"
            android:inputType="textPassword"
            android:padding="16dp"/>

        <EditText
            android:id="@+id/ReditTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:padding="16dp"/>

        <Spinner
            android:id="@+id/spinnerRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"/>

        <EditText
            android:id="@+id/ReditTextApellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/textoApellidos"
            android:padding="16dp"/>

        <EditText
            android:id="@+id/ReditTextDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/textoFechaNacMed"
            android:inputType="date"
            android:padding="16dp"/>

        <EditText
            android:id="@+id/ReditTextPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/textoNumeroMovil"
            android:inputType="phone"
            android:padding="16dp"/>



        <TextView
            android:id="@+id/textRegisterSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sexo:"
            android:padding="16dp"/>

        <RadioGroup
            android:id="@+id/RradioGroupSexo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/RradioMasculino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masculino"
                android:padding="16dp"/>

            <RadioButton
                android:id="@+id/RradioFemenino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Femenino"
                android:padding="16dp"/>
            <RadioButton
                android:id="@+id/RradioN_C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/C"/>
        </RadioGroup>


        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrarse"
            android:padding="16dp"
            android:backgroundTint="@color/primaryVariant"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>